# Database Configuration
MYSQL_ROOT_PASSWORD=your-secure-password
MYSQL_USER=new-api
MYSQL_PASSWORD=your-secure-user-password

# Security Settings
SESSION_SECRET=your-random-secure-string  # Change this! Use a strong random string
TURNSTILE_CHECK_ENABLED=false
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-bot-token
DISCORD_ADMIN_IDS=your-discord-user-id  # Comma-separated list of admin user IDs
DISCORD_GUILD_ID=your-discord-server-id

# Email Configuration (Optional)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_ACCOUNT=your-email@example.com
SMTP_TOKEN=your-smtp-password

# Debug Settings (Disable in production)
DEBUG=false
ENABLE_PPROF=false

# Timezone
TZ=UTC

# Additional Settings
# Uncomment and modify these if needed
# FRONTEND_BASE_URL=https://your-frontend-url.com
# NODE_TYPE=master  # Use 'slave' for worker nodes in multi-node setup
# BATCH_UPDATE_ENABLED=true
# BATCH_UPDATE_INTERVAL=5
# CHANNEL_UPDATE_FREQUENCY=30
# CHANNEL_TEST_FREQUENCY=300
